<body oncopy="return false;">

    <!-- ======= Header ======= -->
    <header class="pb-5">
        <partial name="_HeaderNav" />
    </header><!-- End Header -->

    <main role="main">
        @RenderBody()
    </main>


    <footer class="text-muted py-5">
        <div class="container">
                <a href="#" id="scrollToTopButton" class="font-weight-bold bi bi-arrow-up-square btn d-none position-fixed shadow-lg "></a>

            <p class="mb-1">&copy; RipMyPaperToShreds.com | <a href="https://trimwebdesign.com">Trim Web Design</a></p>
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>


    <!-- Template Main JS File -->
    @*<script src="~/assets/js/main.js"></script>*@
    @RenderSection("Scripts", required: false)

    <script>
        var myButton = document.getElementById("scrollToTopButton");

        window.onscroll = function () {
            scrollFunction()
        };

        function scrollFunction() {
            if (document.body.scrollTop > 20 || document.documentElement.scrollTop > 20) {
                //myButton.style.display = "block";
                myButton.classList.remove("d-none");
            } else {
                myButton.classList.add("d-none");
            }
        }

        function topfunction() {
            document.body.scrollTop = 0;
            document.documentElement.scrollTop = 0;
        }
    </script>
</body>
</html>
