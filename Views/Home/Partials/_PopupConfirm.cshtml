<!-- Modal _PopupConfirm -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Paper Updated</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
               <p>You can stay on the page by clicking in the gray area or close.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                
                    <button type="button" class="btn btn-primary" >@Html.ActionLink("Done Editing", "Paper", "Home", new { id = ViewData["PaperId"]}, new { @class = "text-white" })</button>
               
               
            </div>
        </div>
    </div>
</div>