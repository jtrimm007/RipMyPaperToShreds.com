@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Home Page";
}


<section class="jumbotron text-center mb-0 mt-5">
    <div class="container">
        <h1>Community Proofreading</h1>
        <p class="lead text-muted">Imporve your content today by letting our community proofread your writting.</p>
        <p>
            @if (SignInManager.IsSignedIn(User))
            {

                <a asp-action="Papers" asp-controller="Home" class="btn btn-primary my-2">Browse Papers</a>
                <a asp-action="SubmitPaper" asp-controller="Home" class="btn btn-secondary my-2">Submit Paper</a>

            }
            else
            {
                <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-primary my-2">Sign Up</a>
                <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-primary my-2">Login</a>

            }
        </p>
    </div>
</section>

